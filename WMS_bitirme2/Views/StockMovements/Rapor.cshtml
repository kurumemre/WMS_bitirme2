@model IEnumerable<WMS_bitirme2.Models.StockReportViewModel>

@{
    ViewData["Title"] = "Canlı Stok Raporu";
}

<div class="container mt-4">
    <h2 class="text-primary"><i class="fas fa-chart-line"></i> Canlı Stok Durumu</h2>
    <hr />

    <div class="alert alert-info">
        Bu rapor, yapılan tüm giriş ve çıkış işlemlerini analiz ederek anlık stok durumunu gösterir.
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark bg-dark text-white">
            <tr>
                <th>Ürün Adı</th>
                <th>Raf</th>
                <th>Depo</th>
                <th class="text-success">Toplam Giriş</th>
                <th class="text-danger">Toplam Çıkış</th>
                <th class="text-primary font-weight-bold">MEVCUT STOK</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string satirRengi = "";
                if (item.MevcutStok <= 0) { satirRengi = "table-danger"; } // Stok bittiyse kırmızı
                else if (item.MevcutStok < 5) { satirRengi = "table-warning"; } // Azaldıysa sarı

                <tr class="@satirRengi">
                    <td>@item.UrunAdi</td>
                    <td>@item.RafKodu</td>
                    <td>@item.DepoAdi</td>
                    <td class="text-success">@item.ToplamGiris</td>
                    <td class="text-danger">@item.ToplamCikis</td>
                    <td class="font-weight-bold" style="font-size: 1.1em;">
                        @item.MevcutStok
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>