@model WMS_bitirme2.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BarkodNo" class="control-label"></label>
                <input asp-for="BarkodNo" class="form-control" />
                <span asp-validation-for="BarkodNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tanim" class="control-label"></label>
                <input asp-for="Tanim" class="form-control" />
                <span asp-validation-for="Tanim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kategori Seç</label>
                <select id="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Kategori Seçiniz --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="BrandId" class="control-label">Marka</label>
                <select asp-for="BrandId" class="form-control" id="BrandId">
                    <option value="">-- Önce Kategori Seçiniz --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label"></label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StokMiktari" class="control-label"></label>
                <input asp-for="StokMiktari" class="form-control" />
                <span asp-validation-for="StokMiktari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // Kategori seçildiğinde çalışacak kod
            $('#CategoryId').change(function () {
                var secilenKategoriId = $(this).val(); // Seçilen ID'yi al

                // Marka kutusunu temizle ve "Yükleniyor..." yaz
                $('#BrandId').empty();
                $('#BrandId').append('<option value="">Yükleniyor...</option>');

                if (secilenKategoriId != "") {
                    // AJAX İsteği Başlıyor (Garson mutfağa koşuyor)
                    $.ajax({
                        type: 'GET',
                        url: '/api/BrandsApi/GetBrands/' + secilenKategoriId, // Senin API Adresin
                        dataType: 'json',
                        success: function (data) {
                            // Gelen veriyi (data) döngüyle kutuya ekle
                            $('#BrandId').empty();
                            $('#BrandId').append('<option value="">-- Marka Seçiniz --</option>');

                            $.each(data, function (i, marka) {
                                $('#BrandId').append('<option value="' + marka.id + '">' + marka.ad + '</option>');
                            });
                        },
                        error: function (ex) {
                            alert('Markalar getirilirken hata oluştu: ' + ex);
                        }
                    });
                } else {
                    // Kategori seçimi iptal edilirse markayı da temizle
                    $('#BrandId').empty();
                    $('#BrandId').append('<option value="">-- Önce Kategori Seçiniz --</option>');
                }
            });
        });
    </script>

}
