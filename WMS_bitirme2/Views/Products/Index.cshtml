            <td>
                @Html.DisplayFor(modelItem => item.BarkodNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tanim)
