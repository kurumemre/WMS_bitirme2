@model WMS_bitirme2.Models.SalesOrder

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SalesOrder</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<hr />
<h3>Sipariş İçeriği</h3>
<div class="mb-3">
    <a asp-controller="SalesOrderItems" asp-action="Create"
       asp-route-salesOrderId="@Model.Id" class="btn btn-warning">
        + Ürün Ekle (Satış)
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün</th>
            <th>Miktar</th>
            <th>Birim Fiyat</th>
            <th>Tutar</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null)
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product?.Ad</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C2")</td>
                    <td>@item.LineTotal.ToString("C2")</td>
                    <td><a asp-controller="SalesOrderItems" asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Sil</a></td>
                </tr>
            }
            <tr>
                <td colspan="3" class="text-end"><strong>TOPLAM:</strong></td>
                <td><strong>@Model.Items.Sum(x => x.LineTotal).ToString("C2")</strong></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
