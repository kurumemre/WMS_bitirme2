@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="text-center mb-5">
    <h1 class="display-4">Depo Yönetim Sistemi</h1>
    <p class="lead">Hoşgeldiniz, anlık sistem durumu aşağıdadır.</p>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3 shadow">
            <div class="card-header">Ürün Çeşidi</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.UrunCesidi</h2>
                <p class="card-text">Sistemde tanımlı farklı ürün sayısı.</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3 shadow">
            <div class="card-header">Toplam Stok Adedi</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.ToplamStok</h2>
                <p class="card-text">Depodaki toplam fiziksel ürün.</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3 shadow">
            <div class="card-header text-dark">Bekleyen Alımlar</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.BekleyenAlim</h2>
                <p class="card-text">Henüz depoya girmemiş siparişler.</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3 shadow">
            <div class="card-header">Bekleyen Satışlar</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.BekleyenSatis</h2>
                <p class="card-text">Hazırlanması gereken sevkiyatlar.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <a asp-controller="PurchaseOrders" asp-action="Create" class="btn btn-outline-primary btn-lg w-100 p-4 shadow-sm">
            🚚 Yeni Mal Kabul (Satın Alma)
        </a>
    </div>
    <div class="col-md-6">
        <a asp-controller="SalesOrders" asp-action="Create" class="btn btn-outline-danger btn-lg w-100 p-4 shadow-sm">
            📦 Yeni Sevkiyat (Satış)
        </a>
    </div>
</div>